{
    "min_packer_version": "0.12.0",
    "variables": {
        "identity_endpoint": "{{env `OS_AUTH_URL`}}",
        "region": "{{env `OS_REGION_NAME`}}",
        "ext_net_id": "",
        "tag": "latest",
        "image_name": "",
        "commit": ""
    },
    "builders": [
        {
            "name": "coreos",
            "type": "openstack",
            "identity_endpoint": "{{user `identity_endpoint`}}",
            "region": "{{user `region`}}",
            "ssh_username": "core",
            "image_name": "{{user `image_name`}}",
            "source_image_name": "CoreOS Stable",
            "ssh_ip_version": "4",
            "flavor": "s1-2",
            "networks": [
                "{{user `ext_net_id`}}"
            ],
            "metadata": {
                "tag": "{{user `tag`}}",
                "commit": "{{user `commit`}}",
                "community": "ovh"
            }
        },
        {
            "name": "centos7",
            "type": "openstack",
            "identity_endpoint": "{{user `identity_endpoint`}}",
            "region": "{{user `region`}}",
            "ssh_username": "centos",
            "image_name": "{{user `image_name`}}",
            "source_image_name": "Centos 7",
            "ssh_ip_version": "4",
            "flavor": "s1-2",
            "networks": [
                "{{user `ext_net_id`}}"
            ],
            "metadata": {
                "tag": "{{user `tag`}}",
                "commit": "{{user `commit`}}",
                "community": "ovh"
            }
        },
        {
            "name": "ubuntu1604",
            "type": "openstack",
            "identity_endpoint": "{{user `identity_endpoint`}}",
            "region": "{{user `region`}}",
            "ssh_username": "ubuntu",
            "image_name": "{{user `image_name`}}",
            "source_image_name": "Ubuntu 16.04",
            "ssh_ip_version": "4",
            "flavor": "s1-2",
            "networks": [
                "{{user `ext_net_id`}}"
            ],
            "metadata": {
                "tag": "{{user `tag`}}",
                "commit": "{{user `commit`}}",
                "community": "ovh"
            }
        }
    ],
    "provisioners": [{
        "type": "file",
        "source": "{{template_dir}}/../../modules",
        "destination": "/tmp"
    },{
        "type": "shell",
        "inline": [
            "/tmp/modules/install-cfssl/install-cfssl",
            "sudo rm -Rf /var/lib/cloud/* /tmp/* /etc/machine-id",
            "if [ -d /boot/coreos ]; then sudo touch /boot/coreos/first_boot; fi"
        ],
        "pause_before": "30s"
    }]
}
